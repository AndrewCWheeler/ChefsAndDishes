@{
    ViewData["Title"] = "New";
}
@model Chef

<div class="my-2">
    <div class="col-sm-6 text-center">
        <h1>Add a Chef!</h1>
    </div>
</div>

<form class="my-2 form-group row" asp-action="CreateChef" asp-controller="Home" method="POST">
    <div class="my-2 col-sm-6">

        <label class="form-label" for="FirstName">First Name</label>
        <input class="form-control form-control-lg" asp-for="FirstName">
        <span class="text-danger" asp-validation-for="FirstName"></span>

        <label class="form-label" for="LastName">Last Name</label>
        <input class="form-control form-control-lg" asp-for="LastName">
        <span class="text-danger" asp-validation-for="LastName"></span>

        <label class="form-label" for="DOB">Date of Birth</label>
        <input class="form-control form-control-lg" asp-for="DOB">
        <span class="text-danger" asp-validation-for="DOB"></span>

        <button class="mt-4 btn btn-outline-primary btn-lg btn-block">Add Chef</button>
    </div>
</form>